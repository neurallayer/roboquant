<component name="ProjectRunConfigurationManager">
  <configuration default="false" name="FullCoverage" type="JUnit" factoryName="JUnit">
    <extension name="coverage">
      <pattern>
        <option name="PATTERN" value="org.roboquant.ta.TaLib" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
      <pattern>
        <option name="PATTERN" value="org.roboquant.alpaca.AlpacaLiveFeed" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
      <pattern>
        <option name="PATTERN" value="org.roboquant.ibkr.*" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
      <pattern>
        <option name="PATTERN" value="org.roboquant.alphavantage.*" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
      <pattern>
        <option name="PATTERN" value="org.roboquant.binance.*" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
      <pattern>
        <option name="PATTERN" value="org.roboquant.xchange.*" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
      <pattern>
        <option name="PATTERN" value="org.roboquant.perf.*" />
        <option name="ENABLED" value="true" />
        <option name="INCLUDE" value="false" />
      </pattern>
    </extension>
    <option name="PACKAGE_NAME" value="" />
    <option name="MAIN_CLASS_NAME" value="" />
    <option name="METHOD_NAME" value="" />
    <option name="TEST_OBJECT" value="pattern" />
    <option name="VM_PARAMETERS" value="-ea -Dorg.slf4j.simpleLogger.defaultLogLevel=warn" />
    <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    <option name="TEST_SEARCH_SCOPE">
      <value defaultName="wholeProject" />
    </option>
    <envs>
      <env name="FULL_COVERAGE" value="true" />
    </envs>
    <patterns>
      <pattern testClass=".*Test$|.*TestIT$" />
    </patterns>
    <method v="2">
      <option name="Make" enabled="true" />
    </method>
  </configuration>
</component>
